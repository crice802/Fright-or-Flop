<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h3 class="py-3 my-0 fs-1 bg-light"><%= title %></h3>
<% if (results) { %>

  <main class="bg-light">
    <div class="container py-5 px-3">
      <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g5 px-sm-5 px-4">
        <% results.forEach(movie => { %>

       

          <div class="col">
            <div class="card bg-dark shadow-sm mt-3">
              <% if (movie.poster_path) { %>
                <img
                  class="card-img-top"
                  src="https://image.tmdb.org/t/p/w500/<%=  movie.poster_path %>"
                  alt="<%= movie.title %>'s image"
                  width="30%"
                  height="30%"
                />
              <% } else {%>
                <img
                  class="card-img-top"
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                  height="80%"
                />
              <% } %>
              <div class="card-body">
                <p class="card-title fs-4 text-light"><%= movie.title %></p>
                <p class="card-text fs-5 text-light">Released: <%= movie.release_date %></p>
                
                <%# This is where our movie show UI will go %> 
                <a href="/movies/<%= movie.id %>" class="btn btn-primary">Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <% } %> 
    
  </main>
<%- include('../partials/footer') %>
